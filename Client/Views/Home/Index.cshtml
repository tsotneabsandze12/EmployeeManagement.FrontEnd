@model IReadOnlyList<EmployeeModel>

@{
    ViewData["Title"] = "Employees";
}

<form class="form-inline" style="margin:30px 0 30px 0">

    <div class="form-group">
        <label class="sr-only" for="inputOne">FirstName</label>
        <input type="text" class="form-control" name="FirstName" placeholder="FirstName" value="@ViewBag.Filters[0]">
    </div>

    <div class="form-group">
        <label class="sr-only" for="inputTwo">LastName</label>
        <input type="text" class="form-control" name="LastName" placeholder="LastName" value="@ViewBag.Filters[1]">
    </div>

    <button type="submit" class="btn btn-default">Search</button>
</form>

<a asp-controller="home" asp-action="AddEmployee">Add New</a>

@if (Model.Any())
{
    <div class="card-columns">
        @foreach (var emp in Model)
        {
            <div class="card">
                <div class="card-body text-center">
                    <h5>Personal id : @emp.PersonalId</h5>
                    <h5>Name : @emp.FirstName @emp.LastName</h5>


                    <a asp-controller="home" asp-action="details" asp-route-id="@emp.Id" class="btn btn-primary">View</a>
                    <a asp-controller="home" asp-action="EditEmployee" asp-route-id="@emp.Id" class="btn btn-primary">Edit</a>
                    <a asp-controller="home" asp-action="Delete" asp-route-id="@emp.Id" class="btn btn-danger">Delete</a>
                </div>

            </div>
        }
    </div>
}
else
{
    <div class=" mt-1 mb-1">
        <hr/>
        <h5 class="text-center">
            Nothing to Show here
        </h5>
    </div>
}