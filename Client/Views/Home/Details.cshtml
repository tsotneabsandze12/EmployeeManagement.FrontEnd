@using System.Globalization
@model EmployeeModel
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>


@{
    string value = (Model.DateReleased == null) ? "n/a" : ((DateTime)Model.DateReleased).ToString("dd-MM-yy", DateTimeFormatInfo.InvariantInfo);
}

<div class="row justify-content-center m-3">
    <div class="card" style="width: 25rem;">
        <div class="card-header text-capitalize text-center">
            <h4>@Model.FirstName @Model.LastName</h4>
        </div>
        <div class="card-body text-center">
            <h3 class="card-title">about</h3>
            <h5>Id : @Model.Id</h5>
            <h5>Personal Id : @Model.PersonalId</h5>
            <h5>Gender : @Model.Gender</h5>
            <h5>Date of birth : @Model.BirthDate.ToString("dd-MM-yy", DateTimeFormatInfo.InvariantInfo)</h5>
            <h5>Status : @Model.Status</h5>
            <h5>Date Released : @value</h5>
            <h5>Phone Number : @Model.PhoneNumber</h5>
            <h5>Position : @Model.Position</h5>

            <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>

            @* <a asp-controller="home" asp-action="edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a> *@
            <a asp-controller="home" asp-action="Delete" asp-route-id="@Model.Id"  class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>